datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ScheduleItem {
  id        Int    @id @default(autoincrement())
  day       String
  hour      String
  subject   String
  teacher   String
  classroom String
  type      String
  color     String @default("bg-gray-400") // Pridaj farbu s predvolenou hodnotou
}
